{
  "tags": {
    "allowUnknownTags": true
  },
  "plugins": [
    "plugins/markdown",
    "node_modules/better-docs/typescript"
  ],
  "typescript": {
    "moduleRoot": "src"
  },
  "source": {
    "include": [
      "src"
    ],
    "includePattern": "\\.(jsx|js|ts|tsx)$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "opts": {
    "encoding": "utf8",
    "destination": "docs",
    "template": "./node_modules/better-docs",
    "readme": "./readme.md",
    "recurse": true
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "better-docs": {
      "name": "color-2-name.js!",
      "title": "color-2-name",
      "hideGenerator": true,
      "navLinks": [
        {
          "label": "Example",
          "href": "example.html"
        }
      ]
    }
  }
}

